{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*/*.html", 
      "use": "@vercel/static"
    },
    {
      "src": "*/*/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.png",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.jpg",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/Login/index.html"
    },
    {
      "src": "/Login",
      "dest": "/Login/index.html"
    },
    {
      "src": "/Menu",
      "dest": "/Menu/indexM.html"
    },
    {
      "src": "/Ranking",
      "dest": "/Ranking/index.html"
    },
    {
      "src": "/Perfil", 
      "dest": "/Perfil/index.html"
    },
    {
      "src": "/Desafios",
      "dest": "/Desafios/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/Login/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
